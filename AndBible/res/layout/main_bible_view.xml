<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainBibleViewContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadingEdgeLength="0sp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mainBibleView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdgeLength="0sp"
        android:orientation="vertical" >

        <!--
        removed explicit view reference because this page could contain a MyNote view
		 net.bible.android.view.activity.page.BibleView  
			android:id="@+id/main_text" 
		    android:layout_width="fill_parent" 
		    android:layout_height="fill_parent"
		/
        -->
    </LinearLayout>

    <include layout="@layout/title_bar" />

</LinearLayout>